<%- include("partials/header.ejs") %>

  <main>
    <h1>Today</h1>
    <div class="midle">
      <div class="container">
        <div class="row">
          <%if (locals.toDoListD) {%>
            <% for( let index=0; index < toDoListD.length; index++ ) { %>
              <div class="col">
                <div class="card">
                  <div class="card-body">
                    <div class="form-group ">
                      <input type="checkbox" name="packersOff" id="packers" value="1" />
                      <label for="packers" class="strikethrough">
                        <%=toDoListD[index].taskText%>
                      </label>
                      <p class="footer-date">
                        <%=toDoListD[index].date%>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
                <%}else {%>
                  <p>No items to display</p>
                  <% } %>
                    <div class="col">
                      <div class="card">
                        <div class="card-body">
                          <form action="/" method="POST">
                            <div class="form-group">
                              <textarea class="form-control" name="taskD" rows="3"></textarea>
                              <button type="submit" class="btn btn-light">Ok</button>
                              <div class="form-group"></div>
                          </form>
                        </div>
                      </div>
                    </div>
        </div>
      </div>
    </div>
    <%- include("partials/footer.ejs") %>